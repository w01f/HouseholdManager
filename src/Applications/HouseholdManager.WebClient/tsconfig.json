{
	"compileOnSave": true,
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": false,
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": false,
		"target": "es5",
		"lib": [ "es6", "dom" ],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	]
}