{
	"compileOnSave": true,
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": false,
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": false,
		"target": "es6",
		"lib": [ "dom", "es5" ],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	]
}